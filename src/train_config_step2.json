{
    "name": "SpexPlus",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000
    },
    "arch": {
      "type": "SpexPlus",
      "args": {
        "L1": 20,
        "L2": 80,
        "L3": 160,
        "speaker_emb_size": 256,
        "num_classes": 251,
        "num_filters": 256,
        "num_blocks": 8,
        "num_stacks": 4,
        "representation_channels": 256,
        "de_cnn_channels": 512,
        "de_cnn_k": 3
      }
    },
    "loss": {
      "type": "SpexLoss",
      "args": {
        "alpha": 0.1,
        "beta": 0.1,
        "gamma": 0.5
      }
    },
    "lr_scheduler": {
      "type": "ReduceLROnPlateau",
      "args": {
        "patience": 2,
        "factor": 0.5,
        "verbose": true
      }
    },
    "trainer": {
      "epochs": 60,
      "len_epoch": 1470,
      "grad_norm_clip": 10,
      "grad_acc_steps": 1,
      "monitor": "min val_loss",
      "early_stop": 500,
      "save_dir": "saved/",
      "save_period": 5,
      "log_parameters": false,
      "verbosity": 2,
      "visualize": "wandb",
      "wandb_entity": "yaraksen",
      "wandb_project": "speech_separation"
    },
    "data": {
      "train": {
        "batch_size": 3,
        "num_workers": 4,
        "datasets": [
          {
            "type": "SpeechSeparationDataset",
            "args": {
              "part": "train-clean-100",
              "data_dir": "/kaggle/input/speech-separation/train-clean-100/data/datasets/speech_separation/"
            }
          }
        ]
      },
      "test": {
        "batch_size": 1,
        "num_workers": 4,
        "datasets": [
          {
            "type": "SpeechSeparationDataset",
            "args": {
              "part": "dev-clean",
              "data_dir": "/kaggle/input/speech-separation/dev-clean/data/datasets/speech_separation/"
            }
          }
        ]
      }
    },
    "augmentations": {
      "wave": [],
      "spectrogram": []
    },
    "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 5e-4,
        "weight_decay": 0.00001
      }
    },
    "metrics": [
      {
        "type": "SiSDRMetric",
        "args": {
          "name": "SI-SDR"
        }
      }
    ]
  }
  